<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tats.potatohead.Head"
    tools:showIn="@layout/activity_head"
    android:background="@drawable/color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mr Potato Head"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#eadb0d" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/body"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click his parts to add/remove  them"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hat"
        android:id="@+id/checkBox"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"

        android:onClick="onClick"
        android:textColor="#163617" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyes"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/checkBox3"
        android:layout_toEndOf="@+id/checkBox3"

        android:onClick="onClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyebrows"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"

        android:onClick="onClick"
        android:textColor="#154216" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glasses"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"

        android:onClick="onClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nose"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"

        android:onClick="onClick" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouth"
        android:id="@+id/checkBox6"
        android:layout_alignBottom="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"

        android:onClick="onClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mustache"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5"
        android:visibility="visible"
        android:onClick="onClick" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ears"
        android:id="@+id/checkBox8"
        android:layout_alignBottom="@+id/checkBox7"
        android:layout_toRightOf="@+id/checkBox7"
        android:layout_toEndOf="@+id/checkBox7"
        android:visibility="visible"
        android:onClick="onClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:id="@+id/checkBox9"
        android:layout_below="@+id/checkBox7"
        android:layout_alignLeft="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7"

        android:onClick="onClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:id="@+id/checkBox10"
        android:layout_below="@+id/checkBox8"
        android:layout_toRightOf="@+id/checkBox7"
        android:layout_toEndOf="@+id/checkBox7"

        android:onClick="onClick"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:src="@drawable/hat"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ears"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView4"
        android:src="@drawable/arms"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView5"
        android:src="@drawable/eyebrows"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView6"
        android:src="@drawable/eyes"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView7"
        android:src="@drawable/glasses"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView8"
        android:src="@drawable/nose"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView10"
        android:src="@drawable/mouth"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView9"
        android:src="@drawable/mustache"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView11"
        android:src="@drawable/shoes"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

</RelativeLayout>
