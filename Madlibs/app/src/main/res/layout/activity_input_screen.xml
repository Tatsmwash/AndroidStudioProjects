<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#3b2164">

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Fill in the words to complete the story!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/words_left"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="x word(s) left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/placeholder_field"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Noun"
            android:inputType="textAutoComplete"
            android:textSize="20dp"
            android:background="#ffffff" />

        <Button
            android:id="@+id/submit_button"
            android:text="Ok"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#613c87" />

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:text="Please type a word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_weight="0.29">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:background="@drawable/ma"
            android:adjustViewBounds="false"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/ha"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />
    </RelativeLayout>

</LinearLayout>
